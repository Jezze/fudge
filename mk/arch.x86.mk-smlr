AR=i386-unknown-elf-ar rcs
AS=i386-unknown-elf-as -c -o
LD=i386-unknown-elf-ld -static -o
NASM=nasm -f elf -o
CC=smlrc -Wall -seg32 -nopp -no-leading-underscore -nobss
PP=smlrpp -Iinclude -Ilib -Isrc

%.i: %.c
	@echo PP $@
	@$(PP) $^ > $@

%.asm: %.i
	@echo CC $@
	$(CC) $^ $@

%.o: %.asm
	@echo NASM $@
	@$(NASM) $@ $^

%.o: %.s
	@echo AS $@
	@$(AS) $@ $^
